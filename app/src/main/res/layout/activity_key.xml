<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#192331"
        tools:context=".KeyActivity">

    <com.google.android.gms.ads.AdView
            android:id="@+id/adView_keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Steam key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/steam_key" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/adView_keys" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textColor="#FAFAFA"
            android:textColorHighlight="#00E2D9D9" android:textColorHint="#00F7F7F7"/>
    <ImageView
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp" ads:srcCompat="@drawable/icon_copy"
            android:id="@+id/copy_button" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/steam_key" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.417"
            app:layout_constraintVertical_bias="0.0" android:focusable="true"/>
    <ImageView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" ads:srcCompat="@drawable/icon_share"
            android:id="@+id/share_button"
            app:layout_constraintStart_toEndOf="@+id/copy_button" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/steam_key" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.088"
            app:layout_constraintVertical_bias="0.0" android:focusable="true"/>
    <Button
            android:padding="10dp"
            android:text="Rate our app"
            android:background="#1A4C6B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rate_app" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/copy_button" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.9"/>
</androidx.constraintlayout.widget.ConstraintLayout>